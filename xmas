<audio id="bgm" loop>
  <source src="https://cdn.pixabay.com/audio/2022/12/06/audio_5e2c47bb5a.mp3" type="audio/mpeg">
</audio>

<script>
const rewards = [
  "èªªä¸‰æ¬¡æˆ‘æœ€æ„›ä½  â¤ï¸",
  "å³åˆ»è¦ªè¦ª 10 ä¸‹ ğŸ˜˜",
  "å·å·åœ¨å°æ–¹è€³é‚Šèªªä¸€å¥æƒ…è©± ğŸ¤—",
  "é¡é ­è¦ªè¦ª 5 ä¸‹ ğŸ˜³",
  "èªªä¸€å¥å¹³å¸¸ä¸å¥½æ„æ€èªªçš„è©± ğŸ’“",
  "ç›´è¦–å°æ–¹çœ¼ç› 10 ç§’çœ‹èª°å…ˆç¬‘âœ¨",
  "å¹«å°æ–¹æŒ‰æ‘© 3 åˆ†é˜ ğŸ’†",
  "åˆç…§ä¸€å¼µè¶…é†œçš„ç…§ç‰‡ ğŸ¤¡",
  "ç”¨æ’’å¬Œèªæ°£å‘Šç™½ä¸€æ¬¡ â¤ï¸â€ğŸ”¥"
];

const images = [
  "https://upload.wikimedia.org/wikipedia/commons/thumb/5/5c/Cartoon_dog.svg/512px-Cartoon_dog.svg.png",
  "https://upload.wikimedia.org/wikipedia/commons/thumb/3/3f/Cow_cartoon.svg/512px-Cow_cartoon.svg.png"
];

const board = document.getElementById("board");
const bgm = document.getElementById("bgm");
let musicOn = false;

function createBoard() {
  board.innerHTML = "";
  for (let i = 0; i < 9; i++) {
    const cell = document.createElement("div");
    cell.className = "cell";

    const img = document.createElement("img");
    img.src = images[i % 2];

    const text = document.createElement("div");
    text.className = "reward";
    text.innerText = "é»æˆ‘æŠ½ç";

    cell.appendChild(img);
    cell.appendChild(text);

    cell.onclick = () => {
      const r = rewards[Math.floor(Math.random() * rewards.length)];
      text.innerText = r;
      if (!musicOn) {
        bgm.play();
        musicOn = true;
      }
    };

    board.appendChild(cell);
  }
}

function resetBoard() {
  createBoard();
}

function toggleMusic() {
  if (musicOn) {
    bgm.pause();
    musicOn = false;
  } else {
    bgm.play();
    musicOn = true;
  }
}

createBoard();
</script>

